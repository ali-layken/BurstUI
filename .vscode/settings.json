{
  "deno.enable": true,
  "deno.lint": true,
  "editor.defaultFormatter": "denoland.vscode-deno",
  "editor.colorDecorators": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  "cSpell.words": [
    "distro",
    "hostnames",
    "Hotspot",
    "ogalt",
    "postname",
    "screensize",
    "shellsession",
    "tailnet",
    "Tailscale"
  ],
  "grammarly.selectors": [
    {
      "language": "markdown",
      "scheme": "file",
      "pattern": "posts/Blog_Setup.md"
    }
  ],
  "editor.colorDecoratorsLimit": 1000,
  "editor.defaultColorDecorators": "auto"
}
